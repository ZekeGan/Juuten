{
  "name": "Juuten - Highlight the Important",
  "description": "Highlight the Line and Collect Them!",
  "version": "0.15.0",
  "manifest_version": 3,
  "permissions": ["contextMenus", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "src/asset/icon/Juuten_Icon_16.png",
    "32": "src/asset/icon/Juuten_Icon_32.png",
    "48": "src/asset/icon/Juuten_Icon_48.png",
    "128": "src/asset/icon/Juuten_Icon_128.png"
  },
  "content_scripts":[{
    "matches": ["<all_urls>"],
    "js": ["src/content.js"],
    "css": ["src/content.css"]
  }],
  "action": {
    "default_popup": "index.html",
    "default_title": "Juuten"
  }
}